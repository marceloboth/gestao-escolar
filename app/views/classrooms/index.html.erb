<h1><%= t('titles.classroom.list') %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Criado em</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.name %></td>
        <td><%= classroom.created_at %></td>
        <td>
          <%= link_to 'Editar',  edit_classroom_path(classroom.id), :class => 'btn btn-mini' %>
          <%= link_to 'Excluir', remove_classroom_path(classroom.id), :class => 'btn btn-mini btn-danger'%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('titles.classroom.new'), new_classroom_path, :class => 'btn btn-primary' %>