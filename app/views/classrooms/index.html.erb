<h1><%= t('titles.classroom.list') %></h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ações</th>
    </tr>
  </thead>

  <% @classrooms.each do |classroom| %>
    <tr>
      <td><%= classroom.name %></td>
      <td>
        <%= link_to 'Editar',  edit_classroom_path(classroom.id) %>
        <%= link_to 'Excluir', remove_classroom_path(classroom.id) %>
      </td>
    </tr>
  <% end %>
</table>

<p><%= link_to t('titles.classroom.new'), new_classroom_path %></p>