<%= form_tag new_report_path, method: :post, :html => { :class => 'form-horizontal' } do %>

<fieldset>
  <legend>Relat√≥rio de turmas</legend>

  <div class="control-group">
    <%= label_tag "report[search]", t('form.report.search'), :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag "report[search]" %><br />
    </div>
  </div>

  <div class="control-group">
    <%= label_tag "report[type]", t('form.report.type'), :class => 'control-label' %>
    <div class="controls">
      <%= select_tag "report[type]", ["Turma", "Professor"] %>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag t("helpers.submit.report.show"), :class => 'btn btn-primary' %>
    <%= link_to 'Cancelar', root_path, :class => 'btn' %>
  </div>
</fieldset>

<% end %>