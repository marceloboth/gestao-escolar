source :rubygems

gem "rails", "3.2.11"
gem "rails-i18n"
gem "mysql2"
gem "foreigner"

group :assets do
  gem "less-rails"
  gem 'coffee-rails'
  gem "uglifier"
  gem "twitter-bootstrap-rails"
end

gem 'jquery-rails'
#workaround to not get 'could not find a javascript runtime' bug
gem 'execjs'
gem "therubyracer"


group :development do
  gem "pry"
  gem "pry-rails"
  gem "awesome_print"
end

group :development, :test do
  gem "rspec-rails"
  gem "capybara"
  gem "factory_girl"
  gem "factory_girl-preload"
end